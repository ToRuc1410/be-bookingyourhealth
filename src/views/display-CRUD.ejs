<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Display_CRUD</title>
  </head>
  <body>
    <h3 style="text-align: center">Get CRUD from View</h3>
    <div class="container">
      <h2>Table User</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>STT</th>
              <th>Email</th>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Address</th>
              <th>PhoneNumber</th>
              <th>Sex</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0; i < dataTable.length ; i++) { let gt =
            (dataTable[i].gender == 1) ? 'Nam':'Ná»¯' %>
            <tr>
              <td><%= i %></td>
              <td><%= dataTable[i].email%></td>
              <td><%= dataTable[i].firstName%></td>
              <td><%= dataTable[i].lastName%></td>
              <td><%= dataTable[i].address%></td>
              <td><%= dataTable[i].phonenumber%></td>
              <td><%= gt%></td>
              <td>
                <a href="/edit-crud?id=<%=dataTable[i].id%>">
                  <button type="button" class="btn btn-outline-warning">
                    Update
                  </button>
                </a>
                <a href="/delete-crud?id=<%=dataTable[i].id%>"
                  ><button type="button" class="btn btn-outline-danger">
                    Delete
                  </button>
                </a>
              </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
